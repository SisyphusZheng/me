{
  "tasks": {
    "dev": "deno run -A --unstable-sloppy-imports --watch=static/,routes/ dev.ts",
    "build": "deno run -A --unstable-sloppy-imports dev.ts build",
    "preview": "deno run -A --unstable-sloppy-imports main.ts",
    "start": "deno run -A --unstable-sloppy-imports main.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowImportingTsExtensions": true
  }
}
